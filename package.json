{
  "repository": {
    "type": "git",
    "url": "https://github.com/wai-lin/react-hook-pickers"
  },
  "version": "0.2.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "example"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watchAll",
    "lint": "tsdx lint",
    "prepare": "husky install && tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "commit": "git add . && cz",
    "release": "npm run lint && npm run test && npm run build && standard-version"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "name": "react-hook-pickers",
  "author": "wai-lin",
  "module": "dist/react-hook-pickers.esm.js",
  "size-limit": [
    {
      "path": "dist/react-hook-pickers.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-hook-pickers.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "testEnvironment": "jest-environment-jsdom-sixteen"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@size-limit/preset-small-lib": "^5.0.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@types/testing-library__react": "^10.2.0",
    "@types/testing-library__react-hooks": "^4.0.0",
    "@types/testing-library__user-event": "^4.2.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^7.0.1",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.2",
    "standard-version": "^9.3.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "date-fns": "^2.23.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
